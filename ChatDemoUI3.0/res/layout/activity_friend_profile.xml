<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_layout_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black3" />

    <RelativeLayout
        android:id="@+id/layout_friend_profile_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/setting_item_selector"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iv_friend_profile_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/default_hd_avatar" />

        <TextView
            android:id="@+id/tv_friend_profile_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_friend_profile_avatar"
            android:text="zhangsan"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_friend_profile_nick"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_friend_profile_avatar"
            android:text="zhangsan"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black3" />

    <TextView
        android:id="@+id/tv_friend_profile_tag"
        style="@style/list_txt_Style_without_right"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_item_selector"
        android:text="设置备注和标签" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black3" />

    <TextView
        android:id="@+id/tv_friend_profile_more"
        style="@style/list_txt_Style_without_right"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_item_selector"
        android:text="更多" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black3" />
    <Button
        android:id="@+id/btn_add_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_friend"
        android:background="@drawable/btn_bg_green"
        android:layout_margin="10dp"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/btn_send_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addcontact_send_msg"
        android:background="@drawable/btn_bg_green"
        android:layout_margin="10dp"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/btn_send_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addcontact_send_video"
        android:background="@drawable/btn_bg_whilte"
        android:layout_margin="10dp"
        android:visibility="gone"
        />
</LinearLayout>